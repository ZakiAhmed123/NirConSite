body {
  margin:0px;
}

.loader {
	position: fixed;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100%;
	z-index: 9999;
	background: image-url(#{'boxes.gif'}) 50% 50% no-repeat rgb(249,249,249);
  background-color: white;
}

/* NAV BAR */
.nav {
  display: flex;
  justify-content: space-between;;
  align-items: center;
  height: 80px;
  margin: 0;
  width: 100%;
  position: fixed;
  font-family: 'Raleway', sans-serif; font-weight:400;
  top: 0;
  left: 0;
  background-color:#FFFFFF;
  z-index: 9999;
}
.nav-items {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 86%;
}
.nav-item-a{
  height: 56px;
  line-height: 56px;
  width:100%;
  max-width:150px;
}
.nav-item-b{
  height: 56px;
  line-height: 56px;
  width:100%;
  max-width:220px;
}
.nav-items a {
  color: #333;
  text-decoration: none;

  text-align: center;
  margin: 0;

  font-size:16px;
}


.nav-items a:hover {
  color: #f1c40f;

}

.nav-items p {
  color: white;
  text-decoration: none;
  width: 110px;
  text-align: center;
  margin: 0;
}

.nav-items p:hover {
  border-bottom: 3px solid white;
  color: #2ecc71;
}

.nav-logo {
  font-family: 'Raleway', sans-serif; font-weight:600;
  font-size: 30px;
  text-align: center;
  color:#333;
}

.nav-logo a {
  text-decoration: none;
  color:#333;
}
.nav-logo a:hover {
  color:#f1c40f;
}

.nav-logo img {
  width:100%;
  max-width:200px;

}

.flash-message {
  color:white;
  background-color: #1abc9c;
  width:100%;
  height:35px;
  font-family: 'Open Sans', sans-serif; font-weight:300;
  text-align: center;
  line-height: 35px;
  position:absolute;
  top:15%;
}

.flash-message-devise {
  color:white;
  background-color: #e74c3c;
  width:100%;
  height:100px;
  font-family: 'Open Sans', sans-serif; font-weight:300;
  text-align: center;
  line-height: 35px;
  font-size:15px;
  position:absolute;
  top:20%;
}

#cart-nav{
  color:#333;
  height:56px;
  line-height: 56px;
}

#cart-nav:hover {
  color:#f1c40f;
}

/* DROPDOWN BUTTON FOR NAV */
.dropbtn {
  color:#333;
  padding: 16px;
  font-size: 17px;
  border: none;
  cursor: pointer;
  background-color: rgba(255,0,0,0);
  width:100%;
  margin-right: 13.5px;
  font-family: 'Raleway', sans-serif; font-weight:400;
}

.dropbtn i {
  color:#333;
}

.dropbtn:hover {
  color:#f1c40f;
}

.dropdown {
  position: relative;
  display: inline-block;
}
.dropdown-content {
  display: none;
  position: absolute;
  min-width: 160px;
}
.dropdown-content a {
  color: gray;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  background-color: white;
  font-size: 12px;
}
.dropdown-content a i {
  color: gray;
}
.dropdown-content a:hover {
  color: white;
  background-color: #f1c40f;
}
.dropdown:hover .dropdown-content {
  display: block;
}

// FOOTER
