  background-color:#FFF;
  display:flex;
  flex-direction: column;
  padding-top:50px;
  justify-content: center;
  align-items: center;
  height:310px;
}

.footer-logo {
  width:30%;
  text-align: center;
  padding-top:15px;
  padding-bottom:15px;

}

.footer-logo img {
  width:100%;
}
.social {
  display:flex;
  justify-content: center;
  align-items: center;
  color:#333;
  padding:20px 0 20px 0
}

.social i {
  color:#333;
  margin:0 5px;
}

.copyright {
  color:#333;
  font-family: 'Raleway', sans-serif; font-weight:300;
  padding:20px 0 20px 0;
}

.contact-footer-link {
  color:#333;
  font-weight: bold;
}
