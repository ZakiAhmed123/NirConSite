/* DROPDOWN BUTTON FOR NAV */
.dropbtn {
  color:#333;
  padding: 20px;
  font-size: 17px;
  border: none;
  cursor: pointer;
  background-color: rgba(255,0,0,0);
  width:100%;
  margin-right: 13.5px;
  font-family: 'Raleway', sans-serif; font-weight:400;
}

.dropbtn i {
  color:#333;
}

.dropbtn:hover {
  color:#f1c40f;
}


.dropdown-content {
  display: none;
  position: absolute;
  min-width: 160px;
}
.dropdown-content a {
  color: gray;
  padding: 12px 10px;
  text-decoration: none;
  display: block;
  background-color: white;
  font-size: 12px;
}

.dropdown-content img {
  width:100px;
}

#cc-05 {
  width:30px;
}


.dropdown-content a i {
  color: gray;
}
.dropdown-content a:hover {
  color: white;
  background-color: #f1c40f;
}
.dropdown:hover .dropdown-content {
  display: block;
}

