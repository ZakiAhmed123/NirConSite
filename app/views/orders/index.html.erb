<div class="orders-container">

<div class="nav" id="navbar">
  <p class="nav-logo">
    [NIRVANA CON]
  </p>
  <div class="nav-items">
    <%= link_to "HOME",root_path, class:'nav-item-a'%>
    <div class="dropdown">
      <button class="dropbtn">PRODUCTS
        <i class="fa fa-chevron-down" aria-hidden="true"></i>
      </button>
      <div class="dropdown-content" id="myDropdown">
        <%= link_to "EASY EMBEDS", products_path%>
        <%= link_to "STANDARD STAIRS", stairs_path%>
        <%= link_to "TURTLE TRACK / BEAMS", beams_path%>
      </div>

    </div>
    <%= link_to "CUSTOM ORDER", new_message_path, class:'custom-order' %>

    <% if user_signed_in? %>
    <div class="dropdown">
      <button class="dropbtn"><%= current_user.email %>
        <i class="fa fa-chevron-down" aria-hidden="true"></i>
      </button>
      <div class="dropdown-content" id="myDropdown">
        <%= link_to orders_path do %>
        <i class="fa fa-list-alt" aria-hidden="true"></i>
        ORDERS
        <%end%>
        <%= link_to destroy_user_session_path, :method => "delete" do %>
        <i class="fa fa-times-circle-o" aria-hidden="true"></i>
        SIGN OUT
        <%end %>
      </div>
    </div>
    <%else%>
    <%= link_to "SIGN UP", new_user_registration_path, class:'nav-item-a' %>
    <%= link_to "SIGN IN", new_user_session_path, class:'nav-item-a' %>
    <%end%>
    <%= link_to "CONTACT", contact_path , class:'nav-item-a' %>

    <%= link_to cart_path do %>
    <i class="fa fa-shopping-bag" aria-hidden="true" id='cart-nav'></i>
    <%end%>
  </div>
</div>

<div class="orders-title">Order History</div>

<table>
  <thead>
    <tr>
      <th>
        Order ID
      </th>
      <th>
        Email
      </th>
      <th>
        Total Price
      </th>
      <th>
        View Details
      </th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.id %>
        </td>
        <td>
          <%= current_or_guest_user.email %>
        </td>
        <td class="accounting">
          <%= number_to_currency order.total_price %>
        </td>
        <td>
          <%= link_to "View", order_path(id: order.id), class:'order-id-link' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
<div class="footer-alt">

<div class="footer-left">

  <div class="footer-logo">
    [NIRVANA CON]
  </div>

  <div class="copyright">
    Â© Copyright 2016 by Nirvana Construction. All Rights Reserved
  </div>

</div>

<div class="footer-right">
  <i class="fa fa-cc-mastercard fa-3x" aria-hidden="true"></i>
  <i class="fa fa-cc-visa fa-3x" aria-hidden="true"></i>
  <i class="fa fa-cc-discover fa-3x" aria-hidden="true"></i>
  <i class="fa fa-cc-amex fa-3x" aria-hidden="true"></i>
</div>
</div>
