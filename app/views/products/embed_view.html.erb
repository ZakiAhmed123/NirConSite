<%= render '/layouts/nav_bar.html.erb'%>
<div class="view-header">
  <%= image_tag "slab.jpg" %>
  <div class="view-title">
    <%= @product.name %> <%= @product.length %>" <%= @product.width%>" <%=@product.thickness %>"
  </div>
</div>

<% flash.each do |name,msg| %>
<%= content_tag :div, msg, :id => "flash", class: 'flash-message' %>
<%end%>
<div class="product-view">
  <%= image_tag "#{@product.img_file}.jpg", {:class => "product-view-picture"}%>
<div class="product-view-info">
  <p class="product-price"><%= number_to_currency(@product.price)%></p>

  <p class="product-name-sub">
    STANDARDIZED EMBED
  </p>
  <div class="product-info">
    <p class="product-dimensions-head">
      Embed Information
    </p>
    <p class="product-dimensions">
      Plate: <%=@product.length%>"
    <%=@product.width%>"
<%=@product.thickness%>" (L x W x T)
</br>
Stud Count
<%= @product.stud_count%></br>
<%=@product.stud_length %>" <%= @product.stud_thickness %>" ( L x T)</br>
</br>
Once purchased, a PDF with shop drawings,load tables, and Sign and Seals for the state your using the products in will be emailed to you directly.
</p>

    </div>
    <%= form_for :order_item, :url => add_to_cart_path(product_id: @product.id) do |f| %>
    <p class="quantity">
    <%= f.number_field :quantity, min: 1, placeholder: "QTY", class:"quantity-dropdown"%>
    <%= f.submit "ADD TO CART", class:"add-to-cart"%></p>
    <%end%>
    </div>
    </div>
<div class="feature-container">
  <div class="feature-products">
    CHECK OUT OUR EMBED STABILIZER KITS
  </div>

  <div class="extras-container">
    <div class="e-block">
      <a href="/stabilizers/1">
        <%= image_tag 'side.jpg', class:'e-image' %>
        <div class="e-description">
          <div class="e-name">
            Side Condition: Embed Stabilizer
          </div>
          <div class="e-price">
            $35.00
          </div>
        </div>
      </a>
    </div>
    <div class="e-block">
      <a href="/stabilizers/2">
        <%= image_tag 'corner.jpg', class:'e-image' %>
        <div class="e-description">
          <div class="e-name">
            Corner Condition: Embed Stabilizer
          </div>
          <div class="e-price">
            $30.00
          </div>
        </div>
      </a>
    </div>

<div class="e-block">
  <a href="/stabilizers/3">
    <%= image_tag 'inside.jpg', class:'e-image' %>
    <div class="e-description">
      <div class="e-name">
        Inside Condition: Embed Stabilizer
      </div>
      <div class="e-price">
        $35.00
      </div>
    </div>
  </a>
</div>

</div>

</div>
<%= render '/layouts/footer.html.erb'%>
