<div class="product-info">
  <p class="product-dimensions-head">
    Embed Stabilizer kit, ...INFO
  </p>
  <%= link_to 'SHOP DRAWING',pdf_alt_path, class:"product-drawing" %>
  LOAD TABLES
</div>
  <%= form_for @orderitem, :url => add_stabilizer_path(product_id: @stabilizer.id) do |f| %>
  <p class="quantity">QUANTITY <%= f.number_field :quantity, max: 10, min: 1 %> </p>

  <%= f.submit "ADD TO CART", class:"add-to-cart"%>
  <%end%>
</div>
</div>

