<%= render '/products/alt_nav.html.erb'%>


<div class="product-view">
  <%= image_tag "#{@stabilizer.img_file}.png", {:class => "stabilizer-view-picture"}%>
<div class="product-view-info">
  <p class="product-view-name"><%= @stabilizer.name %>(in)</p>
  <p class="product-name-sub"> STANDARDIZED EMBED </p>
