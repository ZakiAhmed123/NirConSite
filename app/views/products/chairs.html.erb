

<div class="product-index-container">

  <%= render '/layouts/nav_bar.html.erb'%>
  <div class="coming-soon">
  COLORED CHAIRS COMING SOON
  </div>


    <% flash.each do |name,msg| %>
    <%= content_tag :div, msg, :id => "flash", class: 'flash-message' %>
    <%end%>
    <div class="product-container">
      <% @products.slice(23,28).each do |product|%>
      <div class="embed-index-item">
        <%= link_to "/products/embeds/#{product.id}" do %>
        <div class="image-container">
          <%= image_tag "#{product.img_file}.jpg", {:class => "embed_picture"}%>
        </div>
        <p class="product-index-price"><%= number_to_currency(product.price)%></p>
        <p class="product-name"><%= product.name %> </p>
        <p class="product-sub">
      <%= product.stud_dimensions %></p>
        <%end%>
      </div>

      <%end%>
    </div>

  </div>
</div>

<div class="panels">
<div class="area">
  <div class="p-icon">
    <i class="fa fa-trophy fa-3x" aria-hidden="true"></i>
  </div>
<div class="p-name">
QUALITY GUARANTEED
</div>


</div>
<div class="area">
  <div class="p-icon">
    <i class="fa fa-bus fa-3x" aria-hidden="true"></i>
  </div>
<div class="p-name">
ON SITE DELIVERY
</div>


</div>
<div class="area">
  <div class="p-icon">
    <i class="fa fa-lock fa-3x" aria-hidden="true"></i>
  </div>
<div class="p-name">
SECURE PAYMENT
</div>


</div>
</div>

