

<div class="product-index-container">

  <%= render '/layouts/nav_bar.html.erb'%>
  <div class="index-title-block-chairs">
      <%= image_tag 'Colored_Chairs.png', class:'index-title-image-chairs' %>
      <div class="colored-chairs-banner">
        COLORED CHAIRS
      </div>
  </div>


    <% flash.each do |name,msg| %>
    <%= content_tag :div, msg, :id => "flash", class: 'flash-message' %>
    <%end%>

      <div class="feature-products" style="margin-top:50px;">
        INTERSECTIONAL CHAIRS
      </div>
    <div class="product-container">
      <% @products.slice(0,5).each do |product|%>
      <div class="embed-index-item">
        <%= link_to "/products/chairs/#{product.id}" do %>
        <div class="image-container">
          <%= image_tag "#{product.img_file}.jpg", {:class => "chair_picture"}%>
        </div>
        <p class="product-index-price"><%= number_to_currency(product.price)%></p>
        <p class="product-name"><%= product.name %> </p>
        <p class="product-sub">
          Price Per 500 Chairs</p>
        <%end%>
      </div>

      <%end%>
    </div>

  </div>
</div>

<div class="panels">
<div class="area">
  <div class="p-icon">
    <i class="fa fa-trophy fa-3x" aria-hidden="true"></i>
  </div>
<div class="p-name">
QUALITY GUARANTEED
</div>


</div>
<div class="area">
  <div class="p-icon">
    <i class="fa fa-bus fa-3x" aria-hidden="true"></i>
  </div>
<div class="p-name">
ON SITE DELIVERY
</div>


</div>
<div class="area">
  <div class="p-icon">
    <i class="fa fa-lock fa-3x" aria-hidden="true"></i>
  </div>
<div class="p-name">
SECURE PAYMENT
</div>


</div>
</div>

<%= render '/layouts/footer.html.erb'%>
